<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="2.1">
	<persistence-unit name="smartpoll"
		transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<!--configuracao da conexao com o banco -->
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"></property>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/smartpoll"></property>
			<property name="javax.persistence.jdbc.user" value="postgres"></property>
			<property name="javax.persistence.jdbc.password" value="database"></property>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"></property>
		</properties>
	</persistence-unit>
</persistence>